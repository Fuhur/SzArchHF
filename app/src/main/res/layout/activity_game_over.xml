<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="archhazi.spaceshooter.GameOverActivity">

    <TextView android:text="Game Over" android:layout_width="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:text="Your Score : " android:layout_width="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:paddingTop="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="  "
            android:id="@+id/game_score"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/yourName_text"
        android:text="Your Name:"
        android:textSize="24dp"
        android:paddingTop="45dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="24dp"
            android:hint="Edit Name"
            android:id="@+id/name_input"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/sendName_button"
            android:text="Send Score"
            android:textSize="24dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendName"/>

        </LinearLayout>


</LinearLayout>
